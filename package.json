{
  "name": "drools-formatter",
  "displayName": "Drools Formatter",
  "publisher": "jhhtaylor",
  "author": {
    "name": "Jon Taylor",
    "email": "jhhtaylor@gmail.com"
  },
  "description": "Formats Drools (.drl) rule files in VS Code.",
  "icon": "media/drools-formatter.png",
  "galleryBanner": {
    "color": "#FF914D",
    "theme": "dark"
  },
  "homepage": "https://github.com/jhhtaylor/drools-formatter/blob/main/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/jhhtaylor/drools-formatter"
  },
  "bugs": {
    "url": "https://github.com/jhhtaylor/drools-formatter/issues",
    "email": "jhhtaylor@gmail.com"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Formatters"
  ],
  "keywords": [
    "Drools",
    "drl",
    "rules",
    "formatter",
    "code style"
  ],
  "activationEvents": [
    "onLanguage:drl"
  ],
  "contributes": {
    "languages": [
      {
        "id": "drl",
        "aliases": ["Drools", "drools"],
        "extensions": [".drl"],
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run copyfiles && npm run package",
    "copyfiles": "cp ../README.md ./README.md && cp ../LICENSE ./LICENSE",
    "compile": "npx webpack",
    "watch": "npx webpack --watch",
    "package": "npx webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "echo no-lint",
    "test": "node ./out/test/keywords.test.js"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "@types/vscode": "^1.101.0",
    "typescript": "^5.8.3",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "ts-loader": "^9.5.1",
    "eslint": "^8.57.0"
  }
}
