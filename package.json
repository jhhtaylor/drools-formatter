{
  "name": "drools-formatter",
  "displayName": "Drools Formatter",
  "description": "VS Code extension that formats Drools (.drl) rule files",
  "version": "0.0.1",
  "publisher": "your-name",
  "engines": {
    "vscode": "^1.80.0"
  },
  "activationEvents": [
    "onLanguage:drl"
  ],
  "contributes": {
    "languages": [
      {
        "id": "drl",
        "aliases": ["Drools", "drools"],
        "extensions": [".drl"],
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run copyfiles && npm run package",
    "copyfiles": "cp ../README.md ./README.md && cp ../LICENSE ./LICENSE",
    "compile": "npx webpack",
    "watch": "npx webpack --watch",
    "package": "npx webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "echo no-lint",
    "test": "echo no-tests"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "@types/vscode": "^1.101.0",
    "typescript": "^5.8.3",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "ts-loader": "^9.5.1",
    "eslint": "^8.57.0"
  }
}
