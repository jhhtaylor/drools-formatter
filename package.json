{
  "name": "drools-formatter",
  "displayName": "Drools Formatter",
  "description": "VS Code extension that formats Drools (.drl) rule files",
  "version": "0.0.1",
  "publisher": "your-name",
  "engines": {
    "vscode": "^1.80.0"
  },
  "activationEvents": [
    "onLanguage:drl"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "@types/vscode": "^1.101.0",
    "typescript": "^5.8.3"
  }
}
